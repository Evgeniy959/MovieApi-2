@{
    ViewData["Title"] = "Search";
}

@model MovieApiResponse;

@if (@ViewBag.MovieTitle != null)
{
    <h1>Search results by title : @ViewBag.MovieTitle</h1>
    <small>Total results :  @ViewBag.Result </small>

    <div class="row">
        @foreach (var item in Model.Search)
        {
            <div class="col-md-4">
                <partial name="_MovieCardPartial" model="item" />
            </div>
        }
    </div>
}
else
{
    <h1>Not results!</h1>
}


